generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Links {
  id         String    @id @default(uuid())
  url        String
  customSlug String?   @unique
  expireAt   DateTime?
  password   String?
  private    Boolean?
  user       Users?    @relation(fields: [user_id], references: [id])
  user_id    String?
  Clicks     Clicks[]

  @@map("links")
}

model Users {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  Links         Links[]

  @@map("users")
}

model Clicks {
  id             String   @id @default(uuid())
  ip             String?
  user_agent     String?
  date_of_access DateTime @default(now())
  lon            Decimal?
  lat            Decimal?
  location       String?
  link           Links    @relation(fields: [link_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  link_id        String

  @@map("clicks_in_link")
}
